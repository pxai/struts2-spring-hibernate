<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
    "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="name" >
        <field-validator type="requiredstring" >
        <param name="trim">true</param><!-- Hace un trim, por defecto es true -->
            <message>
			El nombre de usuario es requerido
            </message>
        </field-validator>
    </field>
    <field name="password1" >
        <field-validator type="requiredstring" >
        <message key="password1-validation-error" />
        </field-validator>
    </field>
    <field name="password2" >
        <field-validator type="requiredstring" >
        <message key="password2-validation-error" />
        </field-validator>

    </field>
    <validator type="expression">   
        	<param name="expression">password1 == p√†ssword2</param>  
        	<message key="pass-equals" />  
    </validator>  
    	
    <field name="email" >
        <field-validator type="email" >
        <message key="email-validation-error" />
        </field-validator>
        <field-validator type="requiredstring" >
        <message key="required" />
        </field-validator>
    </field>
    
    <field name="cp" >
        <field-validator type="regex" >
        <param name="expression"><![CDATA[\d{5}]]></param>
        <message key="cp-validation-error" />
        </field-validator>
        <field-validator type="requiredstring" >
        <message key="required" />
        </field-validator>
    </field>
</validators>