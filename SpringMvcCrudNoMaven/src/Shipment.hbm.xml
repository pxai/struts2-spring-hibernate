<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
 <!-- Mapping configuration details between Shipment class and shipment table -->
<hibernate-mapping package="info.pello.mvc">
 
    <class name="Shipment" table="shipment">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="description" column="description"/>
        <property name="shipmentDate" column="shipment_date" />
        <property name="origin" column="origin" />
        <property name="destiny" column="destiny" />
    </class>
 
</hibernate-mapping>