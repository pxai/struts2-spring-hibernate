<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
 <!-- Mapping configuration details between Customer class and customer table -->
<hibernate-mapping package="info.pello.jomework">
 
    <class name="Assignment" table="assignment">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" />
        <property name="description" column="description"/>
        <property name="initDate" column="initdate" type="date" />
        <property name="endDate" column="enddate" type="date" />
    </class>
 
</hibernate-mapping>